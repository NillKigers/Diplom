<Page x:Class="Diplom.Vievs.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Vievs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Меню" Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.RowSpan="2"/>
        <Button VerticalAlignment="Bottom" Click="Kniga_Click" Content="Хлеб" Cursor="Hand"/>
        <Button VerticalAlignment="Bottom" Grid.Column="1" Click="Man_Click" Content="Клиенты" Cursor="Hand"/>
        <Border Background="#FF7F50" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
    </Grid>
</Page>
