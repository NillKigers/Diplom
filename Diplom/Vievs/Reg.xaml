<Page x:Class="Diplom.Vievs.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Vievs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Фамилия Имя Отчество :"/>
            <TextBox Text="{Binding FIO}" Height="35" Width="450" Margin="0,25,0,0"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Text="Номер телефона :"/>
            <TextBox Text="{Binding NumberTel}" Height="35" Width="450" Margin="0,25,0,0" x:Name="Avtor"/>
        </Grid>

        <Grid Grid.Row="4" Background="#FF7F50"/>
        <Button Click="Add1_Click" Content="Зарегистрировать" Grid.Row="4" HorizontalAlignment="Center" Width="230" Height="50" Margin="25,0,0,0" Cursor="Hand"></Button>
    </Grid>
</Page>
